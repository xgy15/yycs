<SearchInput></SearchInput>
<view class="contain">
    <!-- 左侧分类列表 -->
    <view class="cate_menus">
        <view class="menus_item" wx:for="{{leftMenus}}" wx:key="item">{{item}}</view>
    </view>
    <!-- 右侧商品列表 -->
    <view class="cate_goods">
        <view class="goods_group" wx:for="{{rightGoods}}" wx:for-item="item1" wx:for-index="index1" wx:key="cat_name">
            <view class="group_title">/ {{item1.cat_name}} /</view>
            <view class="group_main">
                <view class="main_item" wx:for="{{item1.children}}" wx:key="cat_name" wx:for-item="item2" wx:for-index="index2">
                    <image  src="{{item2.cat_icon}}" mode="widthFix"/>
                    <view class="item_name">{{item2.cat_name}}</view>
                </view>
            </view>
        </view>
    </view>
</view>