.contain {
    /* calc是计算的意思 ，能够计算屏幕大小减去 80 的rpx*/
    height: calc(100vh - 80rpx);
    display: flex;
}
.contain .cate_menus {
    width: 200rpx;
    overflow: auto;
    text-align: center;
    line-height: 80rpx;
    font-size: 26rpx;
}
.contain .menus_item {
    border-left: 5rpx solid #fff;
}
.contain .menus_item.active {
    /* currentColor 是原生的css 属性，是当前的字体的颜色 */

    color: var(--themeColor);
    border-left: 5rpx solid currentColor;
}
.contain .cate_goods {
    flex: 1;
}
.cate_goods .group_title {
    line-height: 80rpx;
    text-align: center;
    font-size: 26rpx;
}
.cate_goods .group_main {
    display: flex;
    flex-wrap: wrap;
}
.cate_goods .group_main .main_item {
    flex: 0 0 33.33%;
    text-align: center;
    color: #666;
    font-size: 24rpx;
}
.cate_goods .group_main image {
    width: 50%;
}